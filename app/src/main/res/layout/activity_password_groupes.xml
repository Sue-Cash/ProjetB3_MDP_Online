<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".PasswordGroupesActivity">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="19dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Retour"
        android:src="@drawable/back" />


    <!-- Title at the top -->
    <TextView
        android:id="@+id/tvPasswords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passwords"
        android:textSize="32sp"
        android:textColor="#03045E"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <!-- 2x2 GridLayout for the four cards -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPasswords"
        android:layout_marginTop="30dp"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:padding="16dp">

        <!-- Card 1: All -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:background="#03045E">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/keys" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />



        </LinearLayout>

        <!-- Card 2: Wi-Fi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:background="#03045E">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wifi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wi-Fi"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />


        </LinearLayout>

        <!-- Card 3: Deleted -->
        <LinearLayout
            android:id="@+id/deletedCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:background="#03045E">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/deleted" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deleted"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />



        </LinearLayout>

        <!-- Card 4: Security -->
        <LinearLayout
            android:id="@+id/securityCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:background="#03045E">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/security" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />



        </LinearLayout>

    </GridLayout>

</RelativeLayout>
